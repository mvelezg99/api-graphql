{
  "compilerOptions": {
    "importHelpers": true,
    "lib": ["es2018", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "sourceMap": true,
    "target": "es2018"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
